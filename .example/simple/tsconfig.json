{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",

    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./build",

    "removeComments": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    "paths": {
      "#core/*": ["./src/core/*"],

      "#handler": ["./src/handlers/index"],
      "#handler/*": ["./src/handlers/*"],
      "#worker/*": ["./src/workers/*"],

      "#structures/*": ["./src/structures/*"],
      "#structures": ["./src/structures/index"],

      "#app": ["./src/index"],
      "#app/db": ["./src/database"],
      "#app/env": ["./src/environment"]
    }
  },

  "include": [
    "package.json",
    "tsconfig.json",
    "src"
  ],

  "exclude": [
    "node_modules"
  ]
}
